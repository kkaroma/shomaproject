<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-md-6">

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div>
    <%= form.label :author, style: "display: block" %>
    <%= form.text_field :author, class: "form-control" %>
  </div>

  <div>
    <%= form.label :isbn, style: "display: block" %>
    <%= form.text_field :isbn, class: "form-control" %>
  </div>

  <div>
    <%= form.label :accno, style: "display: block" %>
    <%= form.text_field :accno, class: "form-control" %>
  </div>

  <div>
    <%= form.label :language_id, style: "display: block" %>
    <%= form.text_field :language_id, class: "form-control" %>
  </div>

  <div>
    <%= form.label :pages, style: "display: block" %>
    <%= form.number_field :pages, class: "form-control" %>
  </div>

  <div>
    <%= form.label :info, style: "display: block" %>
    <%= form.text_area :info, class: "form-control", :rows => 10 %>
  </div>

  <div>
    <%= form.label :subject, style: "display: block" %>
    <%= form.text_field :subject, class: "form-control" %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image, accept: 'image/png, image/gif, image/jpeg' %>
  </div>

  <div>
    <%= form.submit class: "btn btn-success" %>
  </div>

  </div>
  </div>

<% end %>
