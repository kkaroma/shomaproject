<p style="color: green"><%= notice %></p>

<div id="<%= dom_id @book %>">
  <div class="row">
    <div class="col-md-4">
      <% if @book.image.attached? %>
        <img src="<%= (url_for(@book.image)) %>">
      <% else %>
          redirect_to @book
      <% end %>
    </div>
    <div class="p-5 col-md-8">
          <h2><%= @book.title %></h2>
        <p>
          <strong>Author:</strong>
          <%= @book.author %>
        </p>

        <p>
          <strong>Category:</strong>
          <%= @book.category.name %>
        </p>
        <p>
          <strong>Isbn:</strong>
          <%= @book.isbn %>
        </p>

        <p>
          <strong>AccNo:</strong>
          <%= @book.accno %>
        </p>

        <p>
          <strong>Pages:</strong>
          <%= @book.pages %>
        </p>

        <p>
          <strong>Body:</strong>
          <%= @book.body %>
        </p>
      </div>
    </div>

</div>

<div class = "mt-2">
  <%= link_to "Edit this book", edit_book_path(@book), class: "btn btn-primary" %> |
  <%= link_to "Back to books", books_path, class: "btn btn-primary" %>

  <%= button_to "Destroy this book", @book, class: "btn btn-danger mt-4", method: :delete %>
</div>
